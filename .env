# Configurações do Servidor
NODE_ENV=production
PORT=3003
HOST=0.0.0.0

# Configurações do Banco de Dados Data (Railway)
DATABASE_URL=${DATABASE_URL}
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20

# Configurações do Banco da Operação (Externo) - usar variáveis de ambiente
EXTERNAL_DB_HOST=${EXTERNAL_DB_HOST}
EXTERNAL_DB_PORT=${EXTERNAL_DB_PORT}
EXTERNAL_DB_USER=${EXTERNAL_DB_USER}
EXTERNAL_DB_PASSWORD=${EXTERNAL_DB_PASSWORD}
EXTERNAL_DB_NAME=${EXTERNAL_DB_NAME}
EXTERNAL_DB_SSL=false

# Configurações do Redis (desabilitado para Railway)
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=
REDIS_DB=

# Configurações do Config Service (Railway) - usar variáveis de ambiente
CONFIG_SERVICE_URL=${CONFIG_SERVICE_URL}
CONFIG_SERVICE_WS_URL=
CONFIG_SERVICE_API_KEY=${CONFIG_SERVICE_API_KEY}

# Configurações de Segurança - usar variáveis de ambiente
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=3600
API_KEY_SECRET=${API_KEY_SECRET}

# Configurações de Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=500

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/data-service.log

# URLs de Outros Serviços
CONFIG_SERVICE_URL=http://localhost:3000/api/v1
MLM_SERVICE_URL=http://localhost:3002/api/v1
COMMISSION_SERVICE_URL=http://localhost:3003/api/v1

# API Keys para Integração
MLM_SERVICE_API_KEY=fature_mlm_api_2025!K3y_9h8i7j6k5l4m3n2o1p
COMMISSION_SERVICE_API_KEY=fature_commission_api_2025!K3y_9h8i7j6k5l4m3n2o1p

# Configurações de Sincronização
ENABLE_DATA_SYNC=true
SYNC_INTERVAL_MINUTES=30
BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3

# Configurações de Exportação
EXPORT_PATH=/tmp/exports
EXPORT_RETENTION_DAYS=7
MAX_EXPORT_SIZE_MB=100

# Configurações de Jobs
ENABLE_CRON_JOBS=true
DATA_SYNC_CRON=*/30 * * * *
CLEANUP_CRON=0 2 * * *
ANALYTICS_CRON=0 */6 * * *

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

